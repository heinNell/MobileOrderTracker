{
  "expo": {
    "name": "Mobile Order Tracker",
    "slug": "mobile-order-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.logistics.ordertracker",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan QR codes",
        "NSLocationWhenInUseUsageDescription": "This app requires location access to track deliveries",
        "NSLocationAlwaysUsageDescription": "This app requires location access to track deliveries in the background",
        "UIBackgroundModes": ["location", "fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.logistics.ordertracker",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to track your delivery location."
        }
      ]
    ],
    "sdkVersion": "51.0.0",  /* Upgrade to latest SDK for better dependency compatibility (run `npx expo upgrade 51` after) */
    "description": "Logistics QR Code Mobile Application for Drivers",  /* Optional: Helps with app store listings */
    "packagerOpts": {
      "dev": true,  /* Enables dev mode */
      "hostType": "tunnel",  /* Fixes WebSocket issues in Codespaces by using a public tunnel */
      "hot": true  /* Enables hot module replacement for faster reloads */
    },
    "updates": {
      "fallbackToCacheTimeout": 0  /* Enables over-the-air updates */
    },
